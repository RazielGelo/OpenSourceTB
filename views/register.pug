extends layout 

block content
	div(class= "bd-masthead mb-3")
		div.fs-4( class="container px-4 px-md-3")
			div(class ="row align-items-lg-center")
				div(class="col-12 mx-auto col-md-6 order-md-2 col-lg-8")
					form(action="/users/register", method='POST', onsubmit="submitButton.disabled = true; return true;")
						fieldset.fs-4
							p(class="fieldsettitle") Register an account to OpenSource Textbook
							div
								label(for="userName") Username:
								input(type="text", id="userName", name="userName", value=`${(!userName) ? '' : userName}`)
							div
								label(for="firstName") FirstName:
								input(type="text", id="firstName", name="firstName", value=`${(!firstName) ? '' : firstName}`)
							div
								label(for="lastName") LastName:
								input(type="text", id="lastName", name="lastName", value=`${(!lastName) ? '' : lastName}`)
							div
								label(for="birthday") Birthday:
								input(type="Date", id="birthday", name="birthday", value=`${(!birthday) ? '' : birthday.toISOString().substring(0, 10)}`)
							div
								label(for="email") Email:
								input(type="email", id="email", name="email", value=`${(!email) ? '' : email}`)
							div
								label(for="password") Password:
								input(type="password", id="password", name="password")
							div
								label(for="password2") Confirm Password:
								input(type="password", id="password2", name="password2")
							div
								//- button(type="submit", class="button", name="submitButton") Register
								<p class="fs-5">Already have an OpenSource Textbook account?<a href="/users/login" title="Registration"><b> Log in</a></p>
							div
								button(alt="register" type="submit", class="btn btn-primary") Register
