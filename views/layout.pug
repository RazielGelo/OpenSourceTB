doctype html
html(lang="en")
	head
		//- SEO
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description", content="Create your own books.")
		meta(name="description", content="Open source books.")
		meta(name="description", content="Online books.")
		meta(name="description", content="Free online books.")
		meta(name="description", content="Create free books online.")
		meta(name="og:title", property="og:title", content="Beyond the books")
		link(rel="icon" type="image/x-icon" href="/images/Books.png")
		link(rel="stylesheet", href="/stylesheets/style.css")
		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
		link(rel="stylesheet", href="/stylesheets/search.css")
		link(rel="stylesheet", href="/stylesheets/index.css")
		//- Bootstrap
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
		//- <!--Google Font -->
		link(rel="preconnect" href="https://fonts.googleapis.com")
		link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
		link(href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet")
		link(href="https://fonts.googleapis.com/css2?family=McLaren&family=Roboto&display=swap" rel="stylesheet")
		link(href="https://fonts.googleapis.com/css2?family=Raleway:wght@600;700;800&display=swap" rel="stylesheet")
		link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css")

		block script
		block title
			title Beyond the Books
	<header class="navbar navbar-expand-md navbar-dark bd-navbar fs-3 .ms-1">
		<div class="container-fluid">
			<a class="navbar-brand" href="/">
			<img src="/images/Books.png" alt="Beyond the books" width="60" height="50" class="d-inline-block align-text-top">
			</a>
			| 
			if user
				p(class="font-name") Welcome #{user.firstName}!
			<nav class="flex-wrap flex-sm-nowrap fs-4" aria-label="Main navigation">
				button.navbar-toggler(
					type='button' 
					data-bs-toggle='collapse' 
					data-bs-target='#navbarNav' 
					aria-controls='navbarNav' 
					aria-expanded='false' 
					aria-label='Toggle navigation')
					span.navbar-toggler-icon
				if user
					div.collapse.navbar-collapse#navbarNav
						ul.navbar-nav.mr-auto
							li.nav-item.active
								a.nav-link.text-light.active(href='/') Home
							li.nav-item.active
								a.nav-link.text-light.active(href='/about') About
							li.nav-item.active
								a.nav-link.text-light.active(href='/books/add') Add Book
							li.nav-item.active
								a.nav-link.text-light.active(href='/users/profile') Profile
							li.nav-item.active
								a.nav-link.text-light.active(href='/users/logout') Logout
				else
					div.collapse.navbar-collapse#navbarNav
						ul.navbar-nav.mr-auto
							li.nav-item.active
								a.nav-link.text-light.active(href='/') Home
							li.nav-item.active
								a.nav-link.text-light.active(href='/about') About	
							li.nav-item.active
								a.nav-link.text-light.active(href='/login') Login
							li.nav-item.active
								a.nav-link.text-light.active(href='/register') Register
					</div>
	</header>
	<main>
		<article>
		body(class="d-flex flex-column h-100")
			!= messages('message', locals)
			if errors
				each error, i in errors
					div(class="alert alert-danger") #{error.msg}
			block content		
		</article> 
	</main>
	<footer class="c-footer footer-mt text-center">
		div(class="container pt-3 p-2")
			<address>
				p Beyond the books empowers and connects authors and readers through open accessto a global reading and publishing platform.
				p Vancouver Community College, Vancouver, B.C., Canada
				p Copyright &copy; 2021