doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet", href="/stylesheets/style.css")
		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
		link(rel="stylesheet", href="/stylesheets/search.css")
		//- Bootstrap
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
		//- <!--Google Font -->
		link(rel="preconnect" href="https://fonts.googleapis.com")
		link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
		link(href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet")
		link(href="https://fonts.googleapis.com/css2?family=McLaren&family=Roboto&display=swap" rel="stylesheet")
		link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css")

		block script
		block title
			title OpenSourceTextbook
	<header class="navbar navbar-expand-md navbar-dark bd-navbar fs-5">
		<nav class="container-xxl flex-wrap flex-md-nowrap" aria-label="Main navigation">
			<a href ="/">
				img(src ="/images/logo.png" width = "30px" height = "30px")
			</a> 
			button.navbar-toggler(
				type='button' 
				data-bs-toggle='collapse' 
				data-bs-target='#navbarNav' 
				aria-controls='navbarNav' 
				aria-expanded='false' 
				aria-label='Toggle navigation')
				span.navbar-toggler-icon
			if user
				div.collapse.navbar-collapse#navbarNav
					ul.navbar-nav.mr-auto
						li.nav-item.active
							a.nav-link.text-light.active(href='/') Home
						li.nav-item.active
							a.nav-link.text-light.active(href='/books/add') Add Book
						li.nav-item.active
							a.nav-link.text-light.active(href='/users/profile') Profile
						li.nav-item.active
							a.nav-link.text-light.active(href='/users/logout') Logout
						li.nav-item.active
							a.nav-link.text-light.active(href='/about') About

			else
				div.collapse.navbar-collapse#navbarNav
					ul.navbar-nav.mr-auto
						li.nav-item.active
							a.nav-link.text-light.active(href='/') Home
						li.nav-item.active
							a.nav-link.text-light.active(href='/login') Login
						li.nav-item.active
							a.nav-link.text-light.active(href='/register') Register
						li.nav-item.active
							a.nav-link.text-light.active(href='/about') About		</div>
	</header>
	<main>
		<article>
		body
			!= messages('message', locals)
			if errors
				each error, i in errors
					div(class="alert alert-danger") #{error.msg}
			block content		
		</article> 
	</main> 
		<footer class="mt-50">
		<address>
			p OpenSource Textbook empowers and connects authors and readers through open accessto a global reading and publishing platform.
			p Vancouver Community College, Vancouver, B.C., Canada
			p Copyright &copy; 2021