doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name='viewport' content='width=device-width, initial-scale=1')
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet", href="/stylesheets/style.css")
		link(rel="stylesheet", href="/css/bootstrap.css")
		link(rel="stylesheet", href="/stylesheets/search.css")
		link(rel="stylesheet", href="/stylesheets/index.css")
		//- link(rel="stylesheet", href="/stylesheets/modify.css")
		//- link(rel="stylesheet", href="/stylesheets/add.css")
		link(rel="stylesheet", href="/css/bootstrap.min.css" )
		link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
		script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
		block script
		block title
			title OpenSrc
	header
		nav.navbar.navbar-expand-sm.navbar-dark.bg-dark
			span.navbar-brand
				a(href="/")
					img.d-inline-block.align-top(src="#" alt="Logo" class="logo" style={height: "30px"})
			button.bg-dark(
				type="button" 
				data-bs-toggle="collapse" 
				data-bs-target="#navbarNav"
				class="navbar-toggler"
				aria-controls="navbarNav"
				aria-expanded="false"
				aria-label="Toggle navigation")
					span.navbar-toggler-icon
			div#navbarNav.collapse.navbar-collapse
				if user
					ul.navbar-nav
						li.nav-item.active
							a.nav-link.active(href='/') Home
							
						li.nav-item.active
							a.nav-link.active(href='/users/profile') Profile
						| 
						li.nav-item.active
							a.nav-link(href='/users/logout') Logout
				else
					ul.navbar-nav
						li.nav-item.active
							a.nav-link.active(href='/') Home
						li.nav-item.active
							a.nav-link.active(href='/login') Login
						| 
						li.nav-item.active
							a.nav-link.active(href='/register') Register
	body
		!= messages('message', locals)
		if errors
			each error, i in errors
				div(class="alert alert-danger") #{error.msg}
		block content
			block welcomer	
	footer.footer.py-3.bg-dark.text-center.text-light.fixed-bottom
		div.container
			p OpenSource Textbook empowers and connects authors and readers through open accessto a global reading and publishing platform.
			p Vancouver Community College, Vancouver, B.C., Canada
			p Copyright &copy; 2021