extends layout 

block content
	div(class="body_content")
		div(class="header1_edit")
			h1 Add Book
			p This is where you add your new book.
		
		div(class="form_container")
			form(method='POST', action='/books/add')
				div(class="label_container")
					label Title:
					input(name='title', type='text', class="title_input")
					
					label Genre:
					select(name='genre', class="genre_select")
						each genre in distinctGenre
							option(selected) #{genre.genre}
					
					label Description:
					textarea(name='description', class="content_input")
					
					label Link: 
					input(name='link', type='url', class="title_input")
					
					div(class="button_container")
						button(type="submit", class="button_edit") Create
						| 
						a(href='/books/genre')
							button(type="button", class="button_edit") Add Genre
						| 
						a(href='/users/profile') 
							button(type="button", class="button_edit") Cancel
