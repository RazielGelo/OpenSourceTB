extends layout

block content
		div(class= "bd-masthead mb-3")
			div.fs-4( class="container px-4 px-md-3")
				div(class ="row align-items-lg-center")
					div(class="col-12 mx-auto col-md-6 order-md-2 col-lg-8")
						<fieldset>
							h2 Change Password
							p This is where you edit your profile and password. 
							hr
							form(action="/users/modify/password", method='POST')
								div
									label(for="current_password") Current Password:
									input(type="password", id="current_password", name="current_password")
								div
									label(for="new_password") New Password:
									input(type="password", id="new_password", name="new_password")
								div
									label(for="confirm_new_password") Confirm New Password:
									input(type="password", id="confirm_new_password", name="confirm_new_password")
								div
									button(type="submit", class="buttonsmall") Update
									| 
									a(href='/users/profile', class="buttonsmall") Cancel
						</fieldset>