extends layout.pug

block content
	main(role="main")
	
		div.row.row-cols-1.row-cols-md-3
			each book, i in books
				div.col.mb-4
					div.card(style='width: 1em;')
						div.card-body
							h5.card-title #{book.title}
							p.card-text
							| Textbook intro
							br
							a.btn.btn-primary(href="/books/"+book.id) View
			
	
