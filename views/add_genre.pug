extends layout 

block content
	div(class="header1_edit")
		h1 Add Genre
		p This is where you add more genre.
	hr
	div(class="form_container")
		form(method='POST', action='/books/genre', onsubmit="submit.disabled = true; return true;")
			device(class="label_container")
				label New Genre: 
				input(name='genre', type='text')
			div(class="button_container")
				button(type="submit", class="button_edit", name="submit") Create Genre
				| 
				a(href='/books/add')
					button(type="button", class="button_edit") Cancel
